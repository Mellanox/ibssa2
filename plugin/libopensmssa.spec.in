Name: libopensmssa
Version: @VERSION@
Release: %rel%{?dist}

Summary: OpenSM SSA plugin
License: GPL/BSD
Group: System Environment/Libraries
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root--%(%{__id_u} -n)
Source: @TARBALL@.tar.gz
Requires: opensm
BuildRequires: opensm-devel pkgconfig

%description
libopensmssa provides a plugin which provides the SSA functionality to OpenSM

%prep
%setup -q

%build
%configure
make

%install
make DESTDIR=${RPM_BUILD_ROOT} install
# remove unpackaged files from the buildroot
rm -f $RPM_BUILD_ROOT%{_libdir}/*.la

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%{_libdir}/libopensmssa*.so.*
%{_libdir}/libopensmssa*.a
%{_libdir}/libopensmssa*.so
%defattr(640,root,root)
